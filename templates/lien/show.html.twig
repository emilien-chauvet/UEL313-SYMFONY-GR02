{% extends 'base.html.twig' %}

{% block title %}Lien{% endblock %}

{% block body %}
    <style media="screen">
      html {
        font-family: montserrat;
      }
      h1 {
        color: #2B3A67;
      }
      .table {
        margin-bottom: 1rem;
      }
      .table tbody tr th {
        color: #496A81;
        text-align: center;
        width: 50px;
        height: 50px;
      }
      .a_back, .a_custom {
        text-decoration: none;
        margin-right: 2rem;
        color: #2B3A67;
      }
      .btn {
        font-family: montserrat;
        font-size: 1rem;
        background: #2B3A67;
        color: white;
        text-decoration: none;
        padding: .5rem 1rem;
        border-radius: 10px;
        border: none;
        margin: 1rem 0 0 0;
      }
      .btn:hover {
        transition: .5s;
        background: #496A81;
      }
    </style>
    <h1>Lien</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ lien.id }}</td>
            </tr>
            <tr>
                <th>Lien URL</th>
                <td>{{ lien.lienUrl }}</td>
            </tr>
            <tr>
                <th>Lien Titre</th>
                <td>{{ lien.lienTitre }}</td>
            </tr>
            <tr>
                <th>Lien Description</th>
                <td>{{ lien.lienDesc }}</td>
            </tr>
        </tbody>
    </table>

    <a class="a_back" href="{{ path('app_lien_index') }}">← Retour à la liste</a>

    <a class="a_custom" href="{{ path('app_lien_edit', {'id': lien.id}) }}">Modifier</a>

    {{ include('lien/_delete_form.html.twig') }}
{% endblock %}
